<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List des Locations</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Optional custom CSS for additional styling */
        /* Adjustments to table borders and spacing */
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <h1 class="display-4">List des Locations</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Client</th>
            <th>Voiture</th>
            <th>Date Début</th>
            <th>Date Retour</th>
            <th>Prix</th>
            <th>Explorer</th>
            <th>MàJ</th>
        </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.client.nom }} {{ location.client.prenom }}</td>
                <td>{{ location.voiture.modele }}</td>
                <td>{{ location.dateDebut ? location.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ location.dateRetour ? location.dateRetour|date('Y-m-d') : '' }}</td>
                <td>{{ location.prix }}</td>
                <td>
                    <a href="{{ path('app_location_show', {'id': location.id}) }}">show</a>
                </td>
                <td>
                    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_location_new') }}">Ajouter Location</a>
</div>

<!-- Bootstrap JS (Optional, for certain Bootstrap components that require JS) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>